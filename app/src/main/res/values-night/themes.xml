<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IOT1009_A2_AndrewPersechino" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_red</item> <!-- Color of Button -->
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Color of Button Labels -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/black</item> <!-- Background of app -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAllCaps">true</item>
        <item name="android:textViewStyle">@style/MainTextViewStyle</item> <!-- defining text view style -->
    </style>

    <style name="MainTextViewStyle"> <!-- TextViewStyle -->
        <item name="textAllCaps">true</item> <!-- Always keep text capitalized -->
        <item name="android:textColor">@color/white</item> <!-- Color of Text -->
        <item name="android:textStyle">italic</item> <!-- Italic font -->
    </style>
</resources>